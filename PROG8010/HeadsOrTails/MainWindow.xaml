<Window x:Class="Week1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HeadsOrTails"
        mc:Ignorable="d"
        Title="Heads Or Tails" Height="341.649" Width="623.042">
	<Grid RenderTransformOrigin="0.423,0.46">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		<Button Name="heads_button" Grid.Row="0" Grid.Column="0" Content="Show Heads" Click="Heads_Click" FontSize="36" Margin="10,67,52.571,193.143"/>
		<Button Name="tails_button" Grid.Column="0" Content="Show Tails" Click="Tails_Click" FontSize="36" Margin="10,124,51.571,132.143"/>
		<Label Grid.Row="1" Grid.Column="1" Name="heads_pic">
			<Image Source="Heads.bmp" Height="303" Width="303"/>
		</Label>
		<Label Grid.Row="1" Grid.Column="1" Name="tails_pic">
			<Image Source="Tails.bmp" Height="303" Width="303"/>
		</Label>
        <Button x:Name="random_button" Grid.Column="0" Content="Show Random" Click="Random_Click" FontSize="36" Margin="10,186,51.571,70.143"/>
    </Grid>
</Window>
